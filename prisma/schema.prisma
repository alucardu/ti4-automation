// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  messages  Message[] @relation(name: "userMessage")
  messageId Int?
  session   Session?  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId Int?
  host      Session?  @relation(name: "sessionHost")

  @@unique([sessionId, name])
}

model Session {
  id       Int       @id @default(autoincrement())
  name     String
  code     String    @unique
  players  User[]
  messages Message[]
  host     User      @relation(name: "sessionHost", fields: [userId], references: [id])
  userId   Int       @unique
}

model Message {
  id        Int      @id @default(autoincrement())
  message   String
  user      User    @relation(name: "userMessage", fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  session   Session? @relation(fields: [sessionId], references: [id])
  sessionId Int
}
